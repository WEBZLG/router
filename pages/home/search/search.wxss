.search {
  margin: 28rpx 40rpx;
  color: #666;
  font-size: 24rpx;
}

.search input {
  padding: 10rpx 0;
  border-radius: 64rpx;
  background-color: #ddd;
  padding-right: 83rpx;
  padding-left: 30rpx;
}

.search-icon {
  height: 24rpx;
  width: 24rpx;
  position: absolute;
  right: 50rpx;
  top: 28rpx;
  padding: 20rpx;
}
.noSearch{
  width: 308rpx;
  height: 239rpx;
  margin: 54rpx auto;
}
.notext{
  font-size: 24rpx;
  color: #666666;
  text-align: center;
}
.aboutText{
  padding: 0rpx 40rpx;
  font-size: 30rpx;
  color: #666666;
}
.title{
  font-size: 30rpx;
  color: #333333;
  padding: 26rpx 40rpx
}
.list{
  background-color: #ffffff;
  font-size: 24rpx;
  color: #666666;
  line-height: 48rpx;
  padding: 18rpx 40rpx;
}

.tags{
  display: flex;
  flex-wrap: wrap;
  padding: 0rpx 40rpx 30rpx;
  justify-content: space-between;
}

.tag{
  padding: 10rpx 50rpx;
  font-size: 24rpx;
  color: #ffffff;
  border-radius: 50rpx;
  margin-bottom: 30rpx;
  background-color: #AEC7FF;
}