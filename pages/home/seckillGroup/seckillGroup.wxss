/* pages/home/seckillGroup/seckillGroup.wxss */
.banner{
  width: 100%;
  height: 428rpx;
}

.navTime{
  display: flex;
  align-items: center;
}
.navItem{
  flex: 1;
  text-align: center;
  color: #ffffff;
  font-size: 30rpx;
  padding: 10rpx 0;
  background-color: #202020;
}
.navItem.runing{
  background-color: #DC1E1E !important;
}
.navItem.over{
  background-color: #9A9A9A;
}

.endTime{
  font-size: 24rpx;
  color: #666666;
  background-color: #CDCDCD;
  padding: 14rpx 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.time{
  display: inline-block;
  vertical-align: top;
  color: #FF4D50;
}

.groupList{
  position: fixed;
top: 630rpx;
left: 0;
right: 0;
bottom: 0;
overflow: auto;

}
.gopin{
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.textLine{
  font-size: 24rpx;
  text-decoration:line-through; 
}

.itemImg{
  width: 232rpx;
  height: 145rpx;
  margin-right: 24rpx;
}
.item{
  padding:30rpx;
  margin: 0 40rpx 30rpx;
  background-color: #ffffff;
  box-shadow: 0 4rpx 6rpx 2rpx #D7D6D6;
}

.itembox{
  display: flex;
  align-items: center;
  line-height: 48rpx;
}

.progressbox{
  width: 540rpx;
  height: 16rpx;
  border-radius: 16rpx;
  border: 1px solid #FFC63B;
  overflow: hidden;
}

.progress{
  height: 16rpx;
  width: 50%;
  background-color: #FFC63B;
}

.sellNumber{
  font-size: 18rpx;
  margin-top: 20rpx;
}
.itemTitle{
  font-size: 30rpx;
  height: 94rpx;
  display: -webkit-box;
-webkit-box-orient: vertical;
-webkit-line-clamp: 2;
overflow: hidden;
}

.sellNumber{
  display: flex;
  align-content: center;
  justify-content: space-between;
}

.price{
  font-size: 30rpx;
  color: #666666;
}

button.overbtn,
button.pinbtn{
  font-size: 24rpx;
  color: #ffffff;
  width: 140rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin: 0;
  padding: 0;
  min-height: inherit;
  border-radius: 50rpx;
  margin-left: 20rpx;
}
button.overbtn{
  background-color: #9A9A9A;
}
button.pinbtn{
  background-color: #FF4C4F ;
}
.noDataIcon{
  margin: 70rpx auto 85rpx;

}