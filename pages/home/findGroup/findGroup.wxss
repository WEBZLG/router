/* pages/home/findGroup/findGroup.wxss */

.banner,
swiper {
  width: 100%;
  height: 528rpx;
}

.title {
  height: 34rpx;
  width: 288rpx;
  margin: 40rpx auto 30rpx;
}

.itemImg {
  width: 232rpx;
  height: 145rpx;
  margin-right: 24rpx;
  position: relative;
  overflow: hidden;
}

.number{
position: absolute;
left: -168rpx;
top: 4rpx;
transform: rotate(-45deg);
background-color: #2B53EC;
color: #ffffff;
right: 0;
text-align: center;
padding: 10rpx 0;
  font-size: 24rpx;
}

.item {
  display: flex;
  align-items: center;
  line-height: 48rpx;
  margin-bottom: 30rpx;
  background-color: #fff;
  padding: 30rpx 40rpx;
  box-shadow: 0 4rpx 6rpx 2rpx #d7d6d6;
}

.descript{
  flex: 1;
}

.itemTitle {
  font-size: 30rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  height: 96rpx;
}

.price {
  font-size: 24rpx;
  color: #666;
}

button.pinbtn {
  font-size: 24rpx;
  color: #fff;
  width: 140rpx;
  height: 50rpx;
  line-height: 50rpx;
  background: #00c16c;
  margin: 0;
  padding: 0;
  min-height: inherit;
  border-radius: 50rpx;
}

button.overbtn {
  background: #9a9a9a;
}
