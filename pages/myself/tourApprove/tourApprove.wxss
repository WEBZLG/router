/* pages/myself/tourApprove/tourApprove.wxss */

page {
  background-color: #fff;
}

.tourbg {
  height: 220rpx;
  width: 220rpx;
  margin: 54rpx auto 60rpx;
}

.desc {
  line-height: 48rpx;
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

.item {
  display: flex;
  /* align-items: center; */
  margin-bottom: 30rpx;
}

.section {
  width: 374rpx;
  border: 1px solid #ccc;
  height: 70rpx;
  line-height: 70rpx;
  position: relative;
}

.down-icon {
  color: #ccc;
  position: absolute;
  right: 0;
  top: 0;
  border-left: 1px solid #ccc;
  padding: 0 18rpx;
}

.picker {
  padding-left: 20rpx;
  font-size: 24rpx;
}

.iptbox {
  padding: 40rpx;
}

textarea {
  width: 460rpx;
  height: 140rpx;
  font-size: 24rpx;
  border: 1px solid #ccc;
  box-sizing: border-box;
  padding: 24rpx;
}

.item text {
  margin-right: 36rpx;
}

.addbtn {
  height: 168rpx;
  width: 168rpx;
  border: 1px dashed #ccc;
  color: #ccc;
  text-align: center;
  line-height: 168rpx;
  position: relative;
}

.btn {
  margin: 0 75rpx 62rpx;
}

.submit {
  background-color: #00c069;
  font-size: 36rpx;
  color: #fff;
  width: 100% !important;
  border-radius: 90rpx;
  font-weight: 400;
}

.notice {
  color: #999;
  font-size: 24rpx;
}

.iconguanbi {
  position: absolute;
  top: -85rpx;
  right: -15rpx;
  color: #ff0000;
  z-index: 9
}
