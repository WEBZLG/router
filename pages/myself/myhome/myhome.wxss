/* pages/myself/myhome/myhome.wxss */

page {
  background-color: #fff;
}

.homebg {
  width: 100%;
  height: 700rpx;
  background-color: #eee;
}

.head {
  height: 224rpx;
  width: 224rpx;
  border: 7rpx solid #fff;
  border-radius: 50%;
  overflow: hidden;
  position: absolute;
  top: -118rpx;
  left: 50%;
  margin-left: -118rpx;
}

.attestation {
  display: inline-block;
  font-size: 24rpx;
  color: #ff4d50;
  text-align: center;
  padding: 15rpx;
  background-color: #ffc63b;
  border-radius: 62rpx;
  position: relative;
  margin-top: 90rpx;
}

.exit-name {
  display: inline-flex;
  align-items: center;
  margin-top: 30rpx;
}

.exit-name text {
  width: initial;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.exit {
  width: 24rpx;
  height: 24rpx;
  margin-left: 30rpx;
}

.information {
  text-align: center;
  margin-top: -112rpx;
  position: relative;
  background: #fff;
}

.mygoods {
  display: inline-block;
  color: #01bf6c;
  font-size: 24rpx;
  border: 1px solid #01bf6c;
  border-radius: 40rpx;
  padding: 2rpx 25rpx;
  margin: 30rpx 0;
}

.userdata {
  font-size: 24rpx;
  color: #333;
  text-align: center;
  padding-bottom: 30rpx;
}

.item {
  display: inline-flex;
  align-items: center;
  margin: 0rpx 30rpx 30rpx 0;
}

.item view {
  margin: 0 30rpx;
}

.number {
  width: 207rpx;
  margin-bottom: 4rpx;
  border-bottom: 1px solid #2f54eb;
}

.viewNumber {
  position: absolute;
  right: 52rpx;
  top: 34%;
  text-align: right;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 1);
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 1);
}
