/* pages/myself/myself.wxss */

.my-top {
  background-color: #fff;
}

.mybg {
  width: 100%;
  height: 379rpx;
}

.message {
  padding: 0 40rpx;
  margin-top: -100rpx;
  border-bottom: 1px solid #ccc;
  padding-bottom: 24rpx;
}

.userinfo {
  display: flex;
  align-items: top;
  font-size: 30rpx;
}

.userhead {
  height: 138rpx;
  width: 138rpx;
  margin-right: 35rpx;
  border-radius: 50%;
  border: 3rpx solid #fff;
  overflow: hidden;
}

.account {
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 64%;
  text-align: center;
  float: right;
  margin-top: -50rpx;
}

.account text {
  font-size: 24rpx;
  color: #333;
}

.yue, .djzj, .ytx {
  font-size: 30rpx;
}

.yue {
  color: #ffc53d;
}

.djzj {
  color: #2f54eb;
}

.ytx {
  color: #ff4d50;
}

.cxdd {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  line-height: 30rpx;
}

.cxdd text {
  font-size: 24rpx;
  color: #999;
}

.cx-icon {
  margin-right: 36rpx;
  font-size: 46rpx;
  margin-top: -34rpx;
}

.cxdd-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 40rpx;
}

.watch {
  font-size: 24rpx;
  color: #fff;
  background-color: #00c16c;
  padding: 10rpx 22rpx;
  border-radius: 50rpx;
}

.my-bottom {
  padding: 40rpx;
}

.pinbtn {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  padding: 12rpx 0;
}

.pin-icon {
  width: 80rpx;
  height: 67rpx;
  margin-right: 20rpx;
}

.navbox {
  margin: 40rpx 0;
  border-top: 1px solid #ccc;
  border-left: 1px solid #ccc;
}

.nav-item {
  display: flex;
  flex: 1;
  align-items: center;
  line-height: 30rpx;
  background-color: #fff;
  padding: 26rpx 21rpx;
  border-bottom: 1px solid #ccc;
  border-right: 1px solid #ccc;
  overflow: hidden;
}

.qiang-icon, .nav-icon {
  margin-right: 24rpx;
  font-size: 40rpx;
  margin-top: -34rpx;
}

.qiang-icon {
  color: #fecf1f;
}

.title {
  font-size: 30rpx;
  line-height: 36rpx;
  color: #333;
}

.nav-item text {
  font-size: 24rpx;
  color: #999;
}

.nav-list {
  display: flex;
  align-items: center;
  justify-content: center;
}

.btnbox{
    text-align: center;
    line-height: 80rpx;
    margin: 0 35rpx;
}

.exit {
  width: 100% !important;
  font-size: 36rpx;
  color: #fff;
  background-color: #ff4c4f;
  border-radius: 80rpx;
  font-weight: 400;
}

.login {
  color: #fff;
  background-color: #00c16c;
  border-radius: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 29rpx;
}

.username view{
  margin-right: 30rpx;
  margin-top: 15rpx;
}