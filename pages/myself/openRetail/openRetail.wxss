/* pages/myself/openRetail/openRetail.wxss */

.messsge {
  background-color: #fff;
  align-items: center;
  padding: 30rpx 40rpx;
  margin-bottom: 30rpx;
}

.headimg {
  height: 90rpx;
  width: 90rpx;
  border-radius: 50%;
  margin-right: 22rpx;
  background: #0ca9bc;
}

.user {
  font-size: 24rpx;
  line-height: 40rpx;
}

.action {
  color: #666;
}

.title {
  font-size: 30rpx;
}

.chooseType {
  background-color: #fff;
  padding: 30rpx 40rpx;
}

.title {
  font-size: 30rpx;
  margin-bottom: 44rpx;
}

.box {
  flex-wrap: wrap;
}

.item {
  width: 320rpx;
  height: 160rpx;
  border: 1px solid #cdcdcd;
  margin-bottom: 30rpx;
  position: relative;
}

.time {
  width: 60rpx;
  font-size: 24rpx;
  color: #666;
  height: 100%;
  line-height: 160rpx;
  text-align: center;
  background: #f5f5f5;
  border-left: 1px solid #cdcdcd;
}

.price {
  text-align: center;
  font-size: 24rpx;
  flex: 1;
}

.icontuijian {
  color: #01bf6c;
  font-size: 70rpx;
  position: absolute;
  top: 0;
  left: -14rpx;
  line-height: 0;
}

.iconxuanzhong {
  display: none;
  color: #01bf6c;
  font-size: 82rpx;
  position: absolute;
  bottom: 24rpx;
  right: -9rpx;
  line-height: 0;
}

.item.active {
  border: 1px solid #01bf6c;
}

.item.active .iconxuanzhong {
  display: block;
}

.item.active .money {
  font-size: 30rpx;
  color: #01bf6c;
}

.btnbox {
  padding: 40rpx 75rpx;
}

button.openbtn {
  width: 100%;
  line-height: inherit;
  border-radius: 80rpx;
  color: #fff;
  font-size: 36rpx;
  font-weight: 400;
  background-color: #01bf6c;
  margin-bottom: 40rpx;
}
button.retailbtn{
   width: 100%;
  line-height: inherit;
  border-radius: 80rpx;
  color: #fff;
  font-size: 36rpx;
  font-weight: 400;
  background-color: #FBA024;
}
.textbg{
  background-color: #121212;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
}
.caption {
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
  font-size: 36rpx;
  background: linear-gradient(0deg, rgba(227, 194, 102, 1) 0%, rgba(150, 106, 48, 1) 48.2421875%, rgba(255, 215, 102, 1) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}
.desc{
  font-size: 24rpx;
  color: #666666;
  line-height: 48rpx;
}