/* pages/consult/tvList.wxss */
.flex{
  display: flex;
  flex-wrap: wrap;
  align-items: center;

}
.tvList{
  padding-top: 30rpx;
}
.tvItem{
  width: 48%;
  background-color: #ffffff;
  border-radius: 10rpx;
  overflow: hidden;
  margin: 0rpx 1% 30rpx;
}
.tvPic{
  width: 100%;
  height: 400rpx;
  position: relative;
}
.infor{
  position: absolute;
  left: 10rpx;
  bottom: 10rpx;
  z-index: 9;
}
.head{
  height: 60rpx;
  width: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  overflow: hidden;
}
.title{
  font-size: 28rpx;
  margin: 20rpx 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.goodsPic{
  height: 100rpx;
  width: 100rpx;
  border-radius: 6rpx;
  overflow: hidden;
  margin:0 20rpx 10rpx 10rpx;
}
.goodsTitle{
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.price{
  font-size: 24rpx;
  color: #ff0000;
}
.goods{
  display: flex;
  align-items: center;
}
.goodsDesc{
  width: 64%;
  line-height: 48rpx;
}
.name{
  color: #ffffff;
  font-size: 28rpx;
}
.status{
  position: absolute;
  top: 10px;
  left: 10px;
  height: 30rpx;
  font-size: 22rpx;
  background: #000000;
  opacity: 0.6;
  color: #ffffff;
  line-height: 30rpx;
  border-radius: 30rpx;
  padding: 2rpx 10rpx;
  
}