/**index.wxss**/
page {
  display: flex;
  flex-direction: column;
  height: 100%;
}
.body{
  bottom: 102rpx;
}
.nav-tabs {
  width: 100%;
  display: flex;
  position: fixed;
  bottom: 0;
  background-color: #060519;
}

.tab-list {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column-reverse;
  height: 102rpx;

}

.tab-text {
  font-size: 24rpx;
  line-height: 48rpx;
  font-weight: 400;
}

.iconPath {
  width:32rpx;
  height: 32rpx;
}

.tab-content {
  flex: 1;
}

.default {
  line-height: 75rpx;
  text-align: center;
  flex: 1;
  /* border-bottom: 1px solid #eee; */
  color: #eee;
  font-weight: bold;
  font-size: 28rpx;
}

.active {
  line-height: 51rpx;
  text-align: center;
  color: #FFC53D;
  flex: 1;
  /* border-bottom: 1px solid red; */
  font-weight: bold;
  font-size: 28rpx;
}

.show {
  display: block;
  flex: 1;
}

.hidden {
  display: none;
  flex: 1;
}
