.routerItem {
  width: 100%;
  height: 300rpx;
  background: #fff;
  margin-bottom: 30rpx;
  position: relative;
}

.companyInfo {
  position: absolute;
  top: 54rpx;
  left: 130rpx;
  right: 130rpx;
}

.circlebox {
  color: #333333;
  font-size: 24rpx;
  border-radius: 68rpx;
  height: 68rpx;
  text-align: center;
  background: rgba(255, 255, 255, 0.5);
}

.circle {
  background-color: #fff;
  margin: 4rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 60rpx;
  position: relative;
  top: 4rpx;
}

.databox {
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #ffffff;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 1);
}
