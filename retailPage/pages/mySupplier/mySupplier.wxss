/* pages/home/findTravel/findTravel.wxss */

.search {
  margin: 28rpx 40rpx;
  color: #666;
  font-size: 24rpx;
}

.search input {
  padding: 10rpx 0;
  border-radius: 64rpx;
  background-color: #ddd;
  padding-left: 83rpx;
}

.search-icon {
  height: 24rpx;
  width: 24rpx;
  position: absolute;
  left: 73rpx;
  top: 48rpx;
}

.nav {
  height: 90rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 90rpx;
  background: #2d2d2f;
  color: #d0d0d0;
  font-size: 32rpx;
  white-space: nowrap;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}

.nav-item {
  width: 20%;
  display: inline-block;
  text-align: center;
  position: relative;
}

.nav-item.active {
  color: #FFC53D;
}

.nav-item.active .underline {
  display: block;
}

.tab-box {
  position: fixed;
  top: 112rpx;
  left: 0;
  right: 0;
  bottom: 0;
  height: inherit;
}

.tab-content {
  overflow-y: scroll;
}

.underline {
  display: none;
  width: 30rpx;
  height: 4rpx;
  background-color: #FFC53D;
  position: absolute;
  bottom: 10rpx;
  left: 50%;
  margin-left: -15rpx;
}

