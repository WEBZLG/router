.calenderbox {
  margin: 30rpx 40rpx;
}

.calendar_title {
  font-size: 24rpx;
  line-height: 60rpx;
  display: flex;
  align-items: center;
  background-color:#322F40;
}

.calendar_title .icon image {
  width: 60rpx;
  height: 60rpx;
  margin: 5rpx auto;
}

.nextMonth {
  position: absolute;
  right: 45rpx;
}

/* 日历 */

.calendar {
  width: 100%;
  background: #322F40;
  color: #ffffff;
  padding: 0 0 20rpx;
  font-family: FZZhunYuan-M02S;
}

.header {
  background-color: #52505B;
  line-height: 48rpx;
}

.header>view {
  display: inline-block;
  width: 14.285%;
  text-align: center;
  font-size: 20rpx;
}

.weekMark {
  position: relative;
  width: 80%;
  margin: 0 auto;
}

.weekMark view {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  /* border-bottom: 2px solid #69f; */
}

.date-box {
  padding: 10rpx 0;
  margin: 0 auto;
  font-size: 24rpx;
}

.date-box>view {
  position: relative;
  display: inline-block;
  width: 14.285%;
  text-align: center;
  vertical-align: middle;
}

.date-head {
  height: 100rpx;
}

.nowDay .date-head {
  color: #00c16c;
}

.price {
  font-size: 20rpx;
  color: #FFC53D;
}

.place {
  font-size: 20rpx;
}

.calenderItem{
  margin: 0 20rpx;
  display: inline-block;
  vertical-align: middle;
}
.calenderItem.active{
  border-bottom: 4rpx solid #FFC53D;
}
.padg {
  padding-top: 32rpx;
  margin-top: -36rpx;
}
